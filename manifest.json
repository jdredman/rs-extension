{
  "name": "Ramsey Solutions",
  "version": "1.0",
  "description": "Ramsey Solutions app switcher and tools",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://labs.ramseysolutions.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://labs.ramseysolutions.com/*"],
      "js": ["content.js"]
    }
  ]
}
